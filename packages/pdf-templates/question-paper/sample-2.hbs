<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{title}}</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.7/handlebars.min.js"></script>

    <style>
        /* ---------- PAGE + PRINT ---------- */
        @page {
            margin: 10mm 10mm 16mm 10mm;
            counter-increment: page;
        }

        html,
        body {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: "Arial", sans-serif;
            counter-reset: page;
            background: #e5e7eb;
        }

        @media print {
            .no-print {
                display: none;
            }

            body {
                background: white;
            }

            .page {
                box-shadow: none;
                margin: 0;
                border-radius: 0;
            }
        }

        /* ---------- OUTER PAPER SHEET ---------- */
        .sheet {
            width: 210mm;
            min-height: 297mm;
            margin: 0 auto;
            padding: 0;
            background: white;
            border: 3px solid #000;
            position: relative;
            box-sizing: border-box;
        }

        .page {
            width: 210mm;
            min-height: 297mm;
            margin: 0 auto;
            background: white;
            border: 1.5px solid #000000;
            box-shadow: 0 0 6px rgba(15, 23, 42, 0.25);
            position: relative;
            box-sizing: border-box;
            overflow: hidden;
        }

        .main-content {
            padding-bottom: 32px;
            position: relative;
            z-index: 10;
        }

        .watermark-bg {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) rotate(-30deg);
            font-size: 140px;
            font-weight: 900;
            color: rgba(0, 0, 0, 0.06);
            white-space: nowrap;
            z-index: -1;
            user-select: none;
            pointer-events: none;
        }


        /* ---------- QUESTIONS LAYOUT ---------- */
        .question-item {
            page-break-inside: avoid;
            break-inside: avoid;
            margin-bottom: 14px;
            font-size: 11px;
            line-height: 1.5;
        }

        .question-grid {
            column-count: 2;
            column-gap: 20px;
            column-rule: 1px solid #e5e7eb;
        }

        .q-number {
            font-weight: bold;
            display: inline;
            margin-right: 6px;
        }

        .q-content {
            display: inline;
            line-height: 1.6;
        }

        .options {
            margin-top: 6px;
            margin-left: 18px;
        }

        .option-item {
            margin-bottom: 3px;
            line-height: 1.5;
        }

        .section-header {
            font-weight: bold;
            font-size: 11px;
            margin: 10px 0 8px;
            text-transform: uppercase;
            letter-spacing: 0.06em;
            padding: 4px 8px;
            background: #e5e7eb;
            border-left: 3px solid #000000;
            break-after: avoid;
        }

        /* ---------- FOOTER (PAGE NUMBER) ---------- */
        .print-footer {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            font-size: 9px;
            text-align: center;
            padding: 4px 0;
            border-top: 1px solid #d1d5db;
            background: white;
        }

        .print-footer .page-number::after {
            content: counter(page);
        }
    </style>
</head>

<body>
    <div class="sheet">

        <!-- Watermark (text comes from Handlebars data) -->
        <div class="watermark-bg">
            {{#if watermarkText}}
            {{watermarkText}}
            {{else}}
            RANKMARG
            {{/if}}
        </div>

        <div class="min-h-screen main-content">
            <div class="bg-white border-b-4 border-black px-6 pt-4 pb-3">

                <!-- Header -->
                <div class="flex justify-between items-start">

                    <!-- LEFT LOGO / BRAND -->
                    <div class="flex items-center gap-3">
                        <div class="flex flex-col">
                            <div class="flex items-center gap-2">
                                <div class="w-16 h-10 border-2 border-black flex items-center justify-center">
                                    <span class="font-extrabold text-lg tracking-tight">ALLEN</span>
                                </div>
                                <div class="text-[10px] leading-tight font-semibold">
                                    <p>CAREER INSTITUTE</p>
                                    <p class="italic">KOTA (RAJ.)</p>
                                </div>
                            </div>
                            <p class="text-[10px] mt-1 font-medium uppercase tracking-wide">
                                Leaders in JEE (Main + Adv.) | NEET (UG) | Olympiads
                            </p>
                        </div>
                    </div>

                    <!-- CENTER INFO -->
                    <div class="text-center px-4">
                        {{#if examCode}}
                        <p class="text-[11px] font-bold uppercase tracking-wide">
                            {{examCode}}
                        </p>
                        {{/if}}

                        {{#if testCategory}}
                        <p class="text-[11px] font-semibold uppercase tracking-wide">
                            {{testCategory}}
                        </p>
                        {{/if}}

                        {{#if testDate}}
                        <p class="text-[10px] mt-1">
                            Date:
                            <span class="font-semibold">{{testDate}}</span>
                        </p>
                        {{/if}}

                        {{#if duration}}
                        <p class="text-[10px]">
                            Duration:
                            <span class="font-semibold">{{duration}}</span>
                        </p>
                        {{/if}}
                    </div>

                    <!-- RIGHT SIDE (TEST ID / LOGO) -->
                    <div class="w-20 text-right">
                        {{#if testId}}
                        <div class="font-bold text-sm">{{testId}}</div>
                        {{/if}}
                    </div>
                </div>

                <!-- MAIN TITLE -->
                <div class="text-center mt-3">
                    <h1 class="text-xl font-extrabold uppercase tracking-wide">
                        {{title}}
                    </h1>
                    {{#if description}}
                    <p class="text-xs text-gray-700 mt-1">
                        {{description}}
                    </p>
                    {{/if}}
                </div>
            </div>

            <!-- QUESTIONS -->
            <div class="px-6 py-4">
                <div class="question-grid">

                    {{#each testSection}}
                    {{#if name}}
                    <div class="col-span-2 section-header">
                        {{name}}
                    </div>
                    {{/if}}

                    {{#each testQuestion}}
                    {{#with question}}
                    <div class="question-item">
                        <span class="q-number">Q{{inc @index}}.</span>
                        <div class="q-content">
                            {{{content}}}
                        </div>

                        {{#if options}}
                        <div class="options">
                            {{#each options}}
                            <div class="option-item">
                                ({{optLabel @index}}) {{{content}}}
                            </div>
                            {{/each}}
                        </div>
                        {{/if}}
                    </div>
                    {{/with}}
                    {{/each}}
                    {{/each}}

                </div>
            </div>
        </div>


    </div>
</body>

</html>